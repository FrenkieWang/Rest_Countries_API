{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@now/static-build"
      },
      {
        "src": "backend/**",
        "use": "@now/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/$1" },
      { "src": "/(.*)", "dest": "frontend/$1" }
    ]
  }
  